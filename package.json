{
  "name": "catbot",
  "private": true,
  "version": "1.0.0",
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "description": "a bot that posts cats on both twitter and mastodon.",
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node --enable-source-maps dist/main.js",
    "dev": "NODE_ENV=development ts-node-dev -T --respawn --notify=false src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint --color 'src/**/*'",
    "test:jest": "jest --colors",
    "test:prettier": "prettier 'src/**' -l",
    "jest": "jest --watch --colors",
    "prettier": "prettier 'src/**/*' --write"
  },
  "dependencies": {
    "@sentry/integrations": "^7.50.0",
    "@sentry/node": "^7.50.0",
    "jimp": "^0.2.28",
    "pluralize": "^8.0.0",
    "source-map-support": "^0.5.21",
    "twoot": "0.3.0",
    "znv": "^0.3.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/pluralize": "^0.0.29",
    "eslint": "^8.39.0",
    "eslint-config-lostfictions": "^5.0.0",
    "jest": "^29.5.0",
    "jsverify": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    }
  }
}
