{
  "name": "catbot",
  "private": true,
  "version": "1.0.0",
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "description": "a bot that posts cats on both twitter and mastodon.",
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "ts-node-dev -T --respawn --notify=false src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-s -l test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint --color 'src/**/*'",
    "test:jest": "jest --colors",
    "test:prettier": "prettier 'src/**' -l",
    "jest": "jest --watch --colors",
    "prettier": "prettier 'src/**/*' --write"
  },
  "dependencies": {
    "@sentry/integrations": "^6.13.1",
    "@sentry/node": "^6.13.1",
    "envalid": "^6.0.2",
    "jimp": "^0.2.28",
    "pluralize": "^8.0.0",
    "source-map-support": "^0.5.20",
    "twoot": "0.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/pluralize": "^0.0.29",
    "eslint": "^7.32.0",
    "eslint-config-lostfictions": "^1.3.0",
    "jest": "^27.2.1",
    "jsverify": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=16.9.1"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}
