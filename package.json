{
  "name": "catbot",
  "version": "1.0.0",
  "description": "a bot that posts on both twitter and mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "build": "rm -rf dist/ && tsc",
    "test": "run-s -l test:*",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint 'src/**'",
    "test:jest": "jest --colors",
    "jest": "jest --watch --colors",
    "dev": "ts-node-dev --respawn --transpileOnly --notify=false src/main.ts -- local"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "envalid": "^4.1.2",
    "jimp": "^0.2.28",
    "node-schedule": "^1.3.0",
    "pluralize": "^7.0.0",
    "source-map-support": "^0.5.0",
    "twoot": "0.0.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/node-schedule": "^1.2.2",
    "@types/pluralize": "^0.0.29",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.1",
    "jsverify": "^0.8.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.1",
    "ts-node-dev": "^1.0.0-pre.26",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^16.0.1"
  },
  "engines": {
    "node": ">=10.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
