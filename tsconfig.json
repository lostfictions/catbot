{
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": ["ES2023"],
    "module": "CommonJS",
    "target": "ES2022",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}